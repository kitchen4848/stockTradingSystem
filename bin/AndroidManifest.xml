<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stocktradingsystem"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.stocktradingsystem.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.stocktradingsystem.StockMeun"
            android:label="@string/title_activity_stock_meun" >
        </activity>
        <activity
            android:name="com.example.stocktradingsystem.Portfolio"
            android:label="@string/title_activity_portfolio" >
        </activity>
        <activity
            android:name="com.example.stocktradingsystem.RealTimeStock"
            android:label="@string/title_activity_real_time_stock" >
        </activity>
        <activity
            android:name="com.example.stocktradingsystem.StockTrading"
            android:label="@string/title_activity_stock_trading" >
        </activity>
        <activity
            android:name="com.example.stocktradingsystem.StockRecording"
            android:label="@string/title_activity_stock_recording" >
        </activity>
        <activity
            android:name="com.example.stocktradingsystem.PieChart"
            android:label="@string/title_activity_pie_chart" >
        </activity>
    </application>

</manifest>
